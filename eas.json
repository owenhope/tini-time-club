{
  "cli": {
    "version": ">= 14.6.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development"
    },

    // Run on iOS Simulator (Xcode)
    "ios-simulator": {
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development",
      "ios": { "simulator": true }
    },

    // Run on Android Emulator
    "android-emulator": {
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development",
      "android": { "buildType": "apk" }
    },

    "preview": {
      "autoIncrement": false,
      "distribution": "internal",
      "channel": "preview"
    },
    "production": {
      "channel": "production",
      "autoIncrement": true
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "owen@hopemediahouse.com",
        "ascAppId": "6741620393",
        "appleTeamId": "AB12XYZ34S"
      }
    }
  }
}
